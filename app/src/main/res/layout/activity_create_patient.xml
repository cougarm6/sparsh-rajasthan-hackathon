<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:font="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:padding="12dp">

        <ImageView
            android:id="@+id/iv_user"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="12dp"
            android:src="@drawable/user" />


        <LinearLayout
            android:id="@+id/ll_user_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_user"
            android:orientation="horizontal"
            android:weightSum="2">


            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_name"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:gravity="center">
            <com.kungfupandas.sparsh.customui.FontEditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Name"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="@color/text_dark"
                android:textColorHint="@color/text_light"
                android:textSize="16sp"
                font:fontName="RobotoCondensed-Light.ttf" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_age"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:gravity="center">
                <com.kungfupandas.sparsh.customui.FontEditText
                    android:id="@+id/et_age"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Age"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textColor="@color/text_dark"
                    android:textColorHint="@color/text_light"
                    android:textSize="16sp"
                    font:fontName="RobotoCondensed-Light.ttf" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_user_details_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_user_details"
            android:orientation="horizontal"
            android:weightSum="2">


            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_lmp"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:gravity="center">
                <com.kungfupandas.sparsh.customui.FontEditText
                    android:id="@+id/et_lmp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Last Menstrual Period(dd/mm/yy)"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textColor="@color/text_dark"
                    android:textColorHint="@color/text_light"
                    android:textSize="16sp"
                    font:fontName="RobotoCondensed-Light.ttf" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_edd"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:gravity="center">
                <com.kungfupandas.sparsh.customui.FontEditText
                    android:id="@+id/et_edd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Expected Due Date(dd/mm/yy)"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textColor="@color/text_dark"
                    android:textColorHint="@color/text_light"
                    android:textSize="16sp"
                    font:fontName="RobotoCondensed-Light.ttf" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_user_details_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_user_details_two"
            android:orientation="horizontal"
            android:weightSum="2">

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_num_of_preg"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:gravity="center">
                <com.kungfupandas.sparsh.customui.FontEditText
                    android:id="@+id/et_num_of_preg"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Number of Pregnancy"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textColor="@color/text_dark"
                    android:textColorHint="@color/text_light"
                    android:textSize="16sp"
                    font:fontName="RobotoCondensed-Light.ttf" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/til_num_of_live_birth"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="6dp"
                android:layout_marginTop="6dp"
                android:gravity="center">
                <com.kungfupandas.sparsh.customui.FontEditText
                    android:id="@+id/et_num_of_live_birth"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Number of Live Birth"
                    android:inputType="text"
                    android:singleLine="true"
                    android:textColor="@color/text_dark"
                    android:textColorHint="@color/text_light"
                    android:textSize="16sp"
                    font:fontName="RobotoCondensed-Light.ttf" />
            </android.support.design.widget.TextInputLayout>

        </LinearLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_address"
            android:layout_width="match_parent"
            android:layout_below="@+id/ll_user_details_three"
            android:layout_height="wrap_content"
            android:layout_marginBottom="6dp"
            android:layout_marginTop="6dp"
            android:gravity="center">
            <com.kungfupandas.sparsh.customui.FontEditText
                android:id="@+id/et_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="@color/text_dark"
                android:textColorHint="@color/text_light"
                android:textSize="16sp"
                font:fontName="RobotoCondensed-Light.ttf" />
        </android.support.design.widget.TextInputLayout>

        <View
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/til_address"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary" />

        <com.kungfupandas.sparsh.customui.FontTextView
            android:id="@+id/tv_past_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/separator"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="5dp"
            android:gravity="center"
            android:text="PAST HISTORY"
            android:textColor="@color/colorPrimary"
            android:textSize="14sp"
            font:fontName="@string/font_Comfortaa_Regular" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_past_history"
            android:layout_marginTop="10dp"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/checkbox_tuberculosis"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tuberculosis"
                android:textColor="@color/colorPrimary" />

            <CheckBox
                android:id="@+id/checkbox_hypertension"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hypertension"
                android:textColor="@color/colorPrimary" />

            <CheckBox
                android:id="@+id/checkbox_heart"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Heart Disease"
                android:textColor="@color/colorPrimary" />

            <CheckBox
                android:id="@+id/checkbox_diabetes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Diabetes"
                android:textColor="@color/colorPrimary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkbox_other"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Others"
                    android:textColor="@color/colorPrimary" />

                <com.kungfupandas.sparsh.customui.FontEditText
                    android:layout_width="0dp"
                    android:id="@+id/et_others"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:hint="others"
                    font:fontName="@string/font_Comfortaa_Regular"
                    android:textSize="14sp"
                    android:textColorHint="@color/text_very_light"
                    android:textColor="@color/text_dark"
                    />
            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>
</ScrollView>