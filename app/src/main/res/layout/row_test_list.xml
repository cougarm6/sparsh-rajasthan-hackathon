<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cv_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="6dp"
        android:background="@color/white"
        card_view:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="6dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <com.kungfupandas.sparsh.customui.FontTextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:text="VISIT 1"
                android:gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:textSize="14sp"
                font:fontName="@string/font_Comfortaa_Regular" />
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_gravity="center"
           android:gravity="center"
           android:orientation="horizontal"
           android:weightSum="4"
           >

           <com.kungfupandas.sparsh.customui.FontTextView
           android:id="@+id/tv_height"
           android:layout_width="0dp"
               android:text="HEIGHT"
               android:layout_gravity="center"
               android:gravity="center"
               android:layout_weight="1"
           android:layout_height="match_parent"
           android:textColor="@color/colorPrimary"
           android:textSize="14sp"
           font:fontName="@string/font_Comfortaa_Regular" />

           <com.kungfupandas.sparsh.customui.FontTextView
               android:id="@+id/tv_weight"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:text="WEIGHT"
               android:layout_gravity="center"
               android:gravity="center"
               android:layout_height="match_parent"
               android:textColor="@color/colorPrimary"
               android:textSize="14sp"
               font:fontName="@string/font_Comfortaa_Regular" />

           <com.kungfupandas.sparsh.customui.FontTextView
               android:id="@+id/tv_bp"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:text="BP"
               android:layout_gravity="center"
               android:gravity="center"
               android:layout_height="match_parent"
               android:textColor="@color/colorPrimary"
               android:textSize="14sp"
               font:fontName="@string/font_Comfortaa_Regular" />

           <com.kungfupandas.sparsh.customui.FontTextView
               android:id="@+id/tv_ecg"
               android:layout_width="0dp"
               android:layout_weight="1"
               android:text="ECG"
               android:layout_gravity="center"
               android:gravity="center"
               android:layout_height="match_parent"
               android:textColor="@color/colorPrimary"
               android:textSize="14sp"
               font:fontName="@string/font_Comfortaa_Regular" />

       </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:weightSum="4"
            >

            <com.kungfupandas.sparsh.customui.FontTextView
                android:id="@+id/tv_height_val"
                android:layout_width="0dp"
                android:text="165"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="match_parent"
                android:textColor="@color/text_light"
                android:textSize="14sp"
                font:fontName="@string/font_Comfortaa_Regular" />

            <com.kungfupandas.sparsh.customui.FontTextView
                android:id="@+id/tv_weight_val"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="67"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="match_parent"
                android:textColor="@color/text_light"
                android:textSize="14sp"
                font:fontName="@string/font_Comfortaa_Regular" />

            <com.kungfupandas.sparsh.customui.FontTextView
                android:id="@+id/tv_bp_val"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="90"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="match_parent"
                android:textColor="@color/text_light"
                android:textSize="14sp"
                font:fontName="@string/font_Comfortaa_Regular" />

            <com.kungfupandas.sparsh.customui.FontTextView
                android:id="@+id/tv_ecg_val"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="140"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="match_parent"
                android:textColor="@color/text_light"
                android:textSize="14sp"
                font:fontName="@string/font_Comfortaa_Regular" />

        </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>