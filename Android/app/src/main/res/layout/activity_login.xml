<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:font="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.kungfupandas.sparsh.LoginActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:orientation="vertical">

        <com.kungfupandas.sparsh.customui.FontTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Sparsh"
            android:textColor="@color/text_dark"
            android:textSize="52sp"
            font:fontName="RobotoCondensed-Light.ttf" />

        <com.kungfupandas.sparsh.customui.FontTextView
            android:id="@+id/tagline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="italic"
            android:text="improving experience of care"
            android:textColor="@color/yellow"
            android:textSize="16sp"
            font:fontName="RobotoCondensed-Light.ttf" />


        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_login_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="24dp"
            android:gravity="center">

            <com.kungfupandas.sparsh.customui.FontEditText
                android:id="@+id/et_login_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mobile"
                android:inputType="number"
                android:singleLine="true"
                android:textColor="@color/text_dark"
                android:textColorHint="@color/text_light"
                android:textSize="16sp"
                font:fontName="RobotoCondensed-Light.ttf" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:id="@+id/til_login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="24dp"
            android:layout_marginTop="12dp"
            android:gravity="center">

            <com.kungfupandas.sparsh.customui.FontEditText
                android:id="@+id/et_login_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="text"
                android:singleLine="true"
                android:textColor="@color/text_dark"
                android:textColorHint="@color/text_light"
                android:textSize="16sp"
                font:fontName="RobotoCondensed-Light.ttf" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/btn_login"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:background="@color/colorAccent"
            android:padding="7dp"
            android:text="Sign in"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>
</RelativeLayout>

